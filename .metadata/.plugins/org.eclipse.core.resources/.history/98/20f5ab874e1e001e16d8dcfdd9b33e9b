package OtherConceptsOfRestAssured;

import org.testng.annotations.Test;

import io.restassured.RestAssured;
import io.restassured.http.Header;

public class HeadersExample {
	
	
	@Test
	public void passHeader()
	{
		
		RestAssured
				.given()
				.log()
				.all()
				.header("header1", "value1")
				.header("header2", "value2", "value3", "value4")
				.when()
				.get();	
	}
	
	@Test
	public void passHeader2()
	{
		Header header = new Header("header1", "value1");
		
		RestAssured
				.given()
				.log()
				.all()
				.header(header)
				.header("header1", "value2")
				.when()
				.get();	
	}

	@Test
	public void passHeader3()
	{
		
		
		RestAssured
				.given()
				.log()
				.all()
				.headers("h1","v1","h2","v2","h3","v3") //To pass multiple headers
				.when()
				.get();	
	}
}
